<h1>
  <%= title %>
</h1>

<% if (messages && messages.length> 0) { %>
  <div class="flash-message success">
    <% messages.forEach(function(msg) { %>
      <p>
        <%= msg %>
      </p>
      <% }); %>
  </div>
  <% } %>

    <% if (errors && errors.length> 0) { %>
      <div class="flash-message error">
        <% errors.forEach(function(err) { %>
          <p>
            <%= err %>
          </p>
          <% }); %>
      </div>
      <% } %>

        <% if (locals && locals.account) { %>
          <!-- Greeting depends on account type -->
          <h2>Welcome <%= locals.account.account_firstname %>
          </h2>

          <!-- Update account link available for all users -->
          <p><a href="/account/update/<%= locals.account.account_id %>">Update account information</a></p>

          <% if (locals.account.account_type==='Employee' || locals.account.account_type==='Admin' ) { %>
            <h3>Inventory Management</h3>
            <p><a href="/inv/">Manage Inventory</a></p>
            <% } %>
              <% } else { %>
                <p>You're logged in.</p>
                <% } %>